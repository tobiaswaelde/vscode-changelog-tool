{
  "name": "vscode-simple-changelog",
  "publisher": "tobiaswaelde",
  "displayName": "Simple Changelog",
  "description": "Simple tool to create changelogs",
  "version": "0.0.4",
  "license": "MIT",
  "pricing": "Free",
  "icon": "assets/icon/icon-x512.png",
  "galleryBanner": {
    "color": "#ffffff",
    "theme": "light"
  },
  "repository": {
    "url": "https://github.com/tobiaswaelde/vscode-simple-changelog"
  },
  "author": {
    "name": "Tobias WÃ¤lde",
    "email": "tobias.waelde@gmail.com",
    "url": "https://tobiaswaelde.com"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:**/CHANGELOG.md",
    "onView:changelog-explorer"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsWelcome": [
      {
        "view": "changelog-explorer",
        "contents": "No changelogs found.\n[Create initial changelog](command:simple-changelog.initialize)",
        "when": "!simple-changelog.initialized"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "changelog-explorer",
          "title": "Changelogs",
          "icon": "$(timeline-view-icon)"
        }
      ]
    },
    "views": {
      "changelog-explorer": [
        {
          "id": "changelog-explorer",
          "name": "Changelogs",
          "icon": "$(timeline-view-icon)"
        }
      ]
    },
    "commands": [
      {
        "command": "simple-changelog.initialize",
        "category": "Simple Changelog",
        "title": "Create initial changelog"
      },
      {
        "command": "simple-changelog.refresh",
        "category": "Simple Changelog",
        "title": "Refresh changelogs",
        "icon": "$(refresh)",
        "shortTitle": "Refresh"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "simple-changelog.refresh",
          "when": "view == changelog-explorer && simple-changelog.initialized",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.9.3",
    "@vscode/test-electron": "^2.2.0"
  }
}
